<Window x:Class="ABB_Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="850" ResizeMode="NoResize">
	<ListView x:Name="ListOfDevices" HorizontalAlignment="Left" Width="840" SelectionChanged="ListOfDevices_SelectionChanged" Margin="0,0,0,35">
		<ListView.View>
			<GridView ColumnHeaderStringFormat="">
				<GridView.ColumnHeaderContextMenu>
					<ContextMenu/>
				</GridView.ColumnHeaderContextMenu>
				<GridViewColumn Header="IP Address" Width="150"/>
				<GridViewColumn Header="ID" Width="100"/>
				<GridViewColumn Header="Availability" Width="80"/>
				<GridViewColumn Header="Virtual" Width="60"/>
				<GridViewColumn Header="System name" Width="150"/>
				<GridViewColumn Header="RW Version" Width="120"/>
				<GridViewColumn Header="Controller Name" Width="100"/>
			</GridView>
		</ListView.View>
	</ListView>
</Window>
