<Window x:Name="ABB_Kinect_Main_Window" x:Class="ABB_Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ABB Kinect" Height="200" Width="640" ResizeMode="NoResize" Icon="industrial_robot_sh.ico">
	<ListView x:Name="ListOfDevices" HorizontalAlignment="Left" Width="630" Margin="0,0,0,35">
		<ListView.View>
			<GridView ColumnHeaderStringFormat="">
				<GridView.ColumnHeaderContextMenu>
					<ContextMenu/>
				</GridView.ColumnHeaderContextMenu>
				<GridViewColumn Header="IP Address" DisplayMemberBinding="{Binding Path=IPAddress}" Width="80"/>
				<GridViewColumn Header="ID" DisplayMemberBinding="{Binding Path=ID}" Width="50"/>
				<GridViewColumn Header="Availability" DisplayMemberBinding="{Binding Path=Availability}" Width="80"/>
				<GridViewColumn Header="Virtual" DisplayMemberBinding="{Binding Path=IsVirtual}" Width="60"/>
				<GridViewColumn Header="System name" DisplayMemberBinding="{Binding Path=SystemName}" Width="120"/>
				<GridViewColumn Header="RW Version" DisplayMemberBinding="{Binding Path=Version}" Width="80"/>
				<GridViewColumn Header="Controller Name" DisplayMemberBinding="{Binding Path=ControllerName}" Width="100"/>
			</GridView>
		</ListView.View>
	</ListView>
</Window>
